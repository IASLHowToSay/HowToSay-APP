body class="auth_background"
    div class="row" style="margin-top:80px;"
      div class="col-sm-4"
      div class="col-sm-4"
        h1 更改密碼
      div class="col-sm-4"
    div class="row" style="margin-top:25px;"
      div class="col-sm-3"
      div class="col-sm-6"
        form method='post' name="resetpasswordform" action='resetpassword' id='form-resetpassword' onsubmit="return resetpasswordcheck();"
          input type="text" name="token" style="display:none" value="#{token_info[:token]}"
          p id="newpassword-alert" type="text" style="display:none;font-size:8px;margin: 0 0 0px;"
          div class="form-group"
            div class="input-group"
              span class="input-group-addon" &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;新密碼&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
              input class="form-control" name='newpassword' type="password" placeholder="new password" autocomplet="off" id='input-newpassword'
          p id="newpasswordconfirm-alert" type="text" style="display:none;font-size:8px;margin: 0 0 0px;"
          div class="form-group"
            div class="input-group"
              span class="input-group-addon" 再次輸入新密碼
              input class="form-control" name='newpasswordconfirm' type="password" placeholder="new password confirm" autocomplet="off" id='input-newpasswordconfirm'
          div class="form-group"
            button type='submit' class="btn btn-danger btn-block" 確定修改
      div class="col-sm-3"

javascript:
  function resetpasswordcheck(){
    var newpassword = document.resetpasswordform.newpassword.value
    var newpasswordconfirm = document.resetpasswordform.newpasswordconfirm.value
    if(newpassword == ''){
      document.getElementById("newpassword-alert").style.display="block";
      document.getElementById("newpassword-alert").style.color="red";
      document.getElementById("newpassword-alert").innerHTML="新密碼不可以為空白";
    }else{
      document.getElementById("newpassword-alert").style.display="none";
    }
    if(newpassword.length < 8){
      document.getElementById("newpassword-alert").style.display="block";
      document.getElementById("newpassword-alert").style.color="red";
      document.getElementById("newpassword-alert").innerHTML="密碼不可以少於8個字元";
    }else{
      document.getElementById("newpassword-alert").style.display="none";
    }
    if(newpassword != newpasswordconfirm){
      document.getElementById("newpasswordconfirm-alert").style.display="block";
      document.getElementById("newpasswordconfirm-alert").style.color="red";
      document.getElementById("newpasswordconfirm-alert").innerHTML="與新密碼不同";
    }else{
      document.getElementById("newpasswordconfirm-alert").style.display="none";
    }
    if(newpassword == '' || newpassword.length < 8 || newpassword != newpasswordconfirm){
        return false
    }else{
        return true
    }
  } 
  